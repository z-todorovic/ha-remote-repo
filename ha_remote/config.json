{
  "name": "HA Remote Relay",
  "version": "1.2",
  "slug": "ha_remote",
  "description": "Connects this Home Assistant instance to your remote tunnel server.",
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "homeassistant_api": true,
  "options": {
    "tunnel_host": "tunnel.cometgps.com",
    "tunnel_port": 2345
  },
  "schema": {
    "tunnel_host": "str",
    "tunnel_port": "int"
  },
  "webui": "http://[HOST]:8099",
  "ingress": false,
  "ports": { "8099/tcp": 8099 },
  "map": ["share:rw"],
  "arch": ["aarch64", "amd64", "armv7", "i386"],
  "webui": "http://[HOST]:18080/",
  "ingress": false
}
