{
  "name": "HA Remote Relay",
  "version": "1.3",
  "slug": "ha_remote",
  "description": "Connects this Home Assistant instance to your remote tunnel server.",
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "homeassistant_api": true,

  "options": {
    "tunnel_host": "tunnel.securicloud.me",
    "tunnel_port": 443
  },

  "schema": {
    "tunnel_host": "str",
    "tunnel_port": "int"
  },

  "map": ["share:rw"],
  "arch": ["aarch64", "amd64", "armv7", "i386"],

  "ports": {
    "18080/tcp": null
  },

  "webui": {
    "base": "http://127.0.0.1:18080/"
  },

  "ingress": false
}
