{
  "name": "HA Remote Relay",
  "version": "1.5",
  "slug": "ha_remote",
  "description": "Connects this Home Assistant instance to your remote tunnel server.",
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "homeassistant_api": true,

  "options": {
    "tunnel_host": "securicloud.me",
    "tunnel_port": 5001,
    "debug": false
  },

  "schema": {
    "tunnel_host": "str",
    "tunnel_port": "int",
    "debug": "bool"
  },

  "map": ["share:rw"],
  "arch": ["aarch64", "amd64", "armv7", "i386"],

  "ingress": true
}
